<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Waiting for Approval</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    body {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(135deg, #1e1e2f, #121212);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .modal-content {
      background: #1f1f2f;
      border-radius: 1rem;
      text-align: center;
      padding: 2rem;
      box-shadow: 0 0 30px rgba(0,0,0,0.7);
      animation: fadeIn 0.8s ease-in-out;
    }

    .modal-content h5 {
      font-weight: 700;
      color: #00d4ff;
      margin-bottom: 1rem;
      text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
    }

    .spinner-border-lg {
      width: 5rem;
      height: 5rem;
      animation: spin 1.2s linear infinite;
    }

    .modal-content p {
      color: #aaa;
      margin-top: 1rem;
      font-size: 1.1rem;
      animation: pulse 1.5s infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    @keyframes pulse {
      0%, 100% { opacity: 0.8; }
      50% { opacity: 1; }
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px);}
      to { opacity: 1; transform: translateY(0);}
    }
  </style>
</head>
<body>

  <!-- Approval Modal -->
  <div class="modal fade show" id="waitingModal" tabindex="-1" aria-labelledby="waitingModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false" style="display: block;">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content shadow-lg">
        <h5 id="waitingModalLabel">Waiting for Owner Approval</h5>
        <div class="spinner-border spinner-border-lg text-info mb-3" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
        <p>Please wait until the owner approves your login request.</p>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const requestId = "<%= requestId %>";

    // Poll server for approval every 3 seconds
    const pollApproval = setInterval(async () => {
      try {
        const res = await fetch(`/check-approval/${requestId}`);
        const data = await res.json();

        if (data.status === "approved") {
          clearInterval(pollApproval);
          window.location.href = "/secret-message";
        } else if (data.status === "denied") {
          clearInterval(pollApproval);
          alert("Your login request was denied by the owner.");
          window.location.href = "/";
        }
      } catch (err) {
        console.error("Error checking approval:", err);
      }
    }, 3000);
  </script>
</body>
</html>
